<!--
  This policy validates the sender and checks the permissions
-->
<cors allow-credentials="true">
     <allowed-origins>
           <origin>{{Origin-QuantBridge-B2CLoginURL}}</origin>
           <origin>{{Origin-QuantBridge-onmicrosoftURL}}</origin>
           <origin>{{Origin-MicrosoftLogin-URL}}</origin> <!-- login.microsoft.com -->
           <origin>{{Origin-AzureAPIM-URL}}</origin> <!-- Developer portal URL -->
     </allowed-origins>
     <allowed-methods preflight-result-max-age="300">
            <method>*</method>
     </allowed-methods>
     <allowed-headers>
            <header>*</header>
     </allowed-headers>
     <expose-headers>
           <header>*</header>
     </expose-headers>
</cors>
